<% if current_user.admin? %>
<h1> Admin Edit Users Page </h1>
 <div class="users-list">
  <h2>User List:</h2>
  <ul>
    <% @users.each do |user| %>
      <li class="user-list"><%= link_to user.email, user %>
      |<a class="delete">
        <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
      </a>
    <% end %>
  </li>
</ul>
</div>
<%  else %>
<h1> Users Page </h1>
 <div class="users-list">
  <h2>User List:</h2>
  <ul>
    <% @users.each do |user| %>
      <li class="user-list"><%= link_to user.email, user %>
    <% end %>
  </li>
</ul>
</div>
<%end%>
